import numpy as np
import matplotlib.pyplot as plt
   
A = 1
f = 5
phase1 = 0
phase2 = np.pi/2
phase3 = np.pi
phase4 = 1.5*np.pi
t = np.linspace(0, 1,10000)

y1 = A*np.sin(2*np.pi*f*t + phase1)
y2 = A*np.sin(2*np.pi*f*t + phase2)
y3 = A*np.sin(2*np.pi*f*t + phase3)
y4 = A*np.sin(2*np.pi*f*t + phase4)

plt.subplot(2,2, 1)
plt.plot(t, y1)
plt.grid()
plt.tight_layout()
plt.xlabel('time(sec)')
plt.ylabel('Amplitude(Volts)')
plt.title('Sinusoidal wave')

plt.subplot(2,2, 2)
plt.plot(t, y2)
plt.grid()
plt.tight_layout()
plt.xlabel('time(sec)')
plt.ylabel('Amplitude(Volts)')
plt.title('Sinusoidal wave')

plt.subplot(2,2, 3)
plt.plot(t, y3)
plt.grid()
plt.tight_layout()
plt.xlabel('time(sec)')
plt.ylabel('Amplitude(Volts)')
plt.title('Sinusoidal wave')

plt.subplot(2,2, 4)
plt.plot(t, y4)
plt.grid()
plt.tight_layout()
plt.xlabel('time(sec)')
plt.ylabel('Amplitude(Volts)')
plt.title('Sinusoidal wave')
