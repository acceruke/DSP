import numpy as np
import matplotlib.pyplot as plt
   
a = 5
f = 5
phase = 0
t = np.linspace(0, 1,10000)

y = np.exp(-1*a*t)*np.sin(2*np.pi*f*t + phase)


plt.plot(t, y)
plt.grid()
plt.tight_layout()
plt.xlabel('time(sec)')
plt.ylabel('Amplitude(Volts)')
plt.title('Sinusoidal wave multiplying exponential')


